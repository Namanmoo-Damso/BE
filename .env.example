# 서버 포트
PORT=8080

# db.env있는 값들
POSTGRES_USER=damso
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=damso

# 데이터베이스 연결
# Docker 사용 시: 컨테이너 이름 사용 (예: postgres, db 등)
DB_HOST=db
DB_PORT=5432

# JWT 시크릿 키
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-in-production

# JWT 토큰 만료 시간
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# CORS 설정
# 개발 환경: * (모든 origin 허용)
# 프로덕션 환경: 쉼표로 구분된 허용된 도메인 목록
# 예: https://1.sodam.store,https://2.sodam.store,https://3.sodam.store
CORS_ORIGIN=*
CORS_CREDENTIALS=true